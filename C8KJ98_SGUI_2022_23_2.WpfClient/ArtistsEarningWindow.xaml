<Window x:Class="C8KJ98_SGUI_2022_23_2.WpfClient.ArtistsEarningWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:C8KJ98_SGUI_2022_23_2.WpfClient"
        xmlns:vms="clr-namespace:C8KJ98_SGUI_2022_23_2.WpfClient.ViewModels"
        mc:Ignorable="d"
        Title="ArtistsEarningWindow" Height="450" Width="800">

    <Window.DataContext>
        <vms:ArtistsWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <ListBox 
            ItemsSource="{Binding TotalArtistsEarnings}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                            <ColumnDefinition Width="1*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="1" ContentStringFormat=" {0} $" Content="{Binding Value}"></Label>
                        <Label Grid.Column="0" Content="{Binding Key}"></Label>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
    </Grid>
</Window>
