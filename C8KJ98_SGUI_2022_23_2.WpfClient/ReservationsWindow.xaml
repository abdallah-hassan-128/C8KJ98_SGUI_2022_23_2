<Window x:Class="C8KJ98_SGUI_2022_23_2.WpfClient.ReservationsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:C8KJ98_SGUI_2022_23_2.WpfClient"
        xmlns:vms="clr-namespace:C8KJ98_SGUI_2022_23_2.WpfClient.ViewModels"
        mc:Ignorable="d"
        Title="ReservationsWindow" Height="450" Width="800">
    <Window.DataContext>
        <vms:ReservationsWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <ListBox 
            ItemsSource="{Binding Reservations}"
            SelectedItem="{Binding SelectedReservation}"
            SelectedIndex="{Binding SelectedReservationIndex}"
            Grid.Column="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />


                        </Grid.ColumnDefinitions>


                        <Label Grid.Column="0" Content="{Binding ArtistId}"></Label>
                        <Label Grid.Column="1" Content="{Binding FanId}"></Label>
                        <Label Grid.Column="2" Content="{Binding DateTime}"></Label>


                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Column="1">
            <Label Content="Fan Id" Margin="0 10 10 0"/>
            <TextBox Text="{Binding SelectedReservation.FanId}" Margin="10"></TextBox>
            <Label Content="Artist Id" />
            <TextBox Text="{Binding SelectedReservation.ArtistId}" Margin="10"></TextBox>
            <Label Content="reservation Time" />
            <TextBox Text="{Binding SelectedReservation.DateTime}" Margin="10"></TextBox>
            <Button Command="{Binding AddReservationCommand}" Content="Add Reservation" Margin="10" />
            <Button Command="{Binding EditReservationCommand}" Content="Edit Reservation" Margin="10" />
            <Button Command="{Binding DeleteReservationCommand}" Content="Delete Reservation" Margin="10" />
        </StackPanel>
        
        
    </Grid>
</Window>
